{
  "manifest_version": 3,
  "name": "Clear Language Rewriter",
  "version": "1.0",
  "description": "Rewrites webpage text into clear language",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
