{
  "manifest_version": 3,
  "name": "Text Simplifier",
  "version": "1.0",
  "description": "Simplifies web page content using AI for better readability",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://lc-ext-421e91b69266.herokuapp.com/*"
  ],
  "action": {
    "default_title": "Simplify Text",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
