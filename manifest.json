{
  "manifest_version": 3,
  "name": "Text Simplifier",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://your-api-domain.com/*"  // Replace with your actual API domain
  ],
  "action": {
    "default_title": "Simplify Text"
  },
  "background": {
    "service_worker": "background.js"
  }
}
